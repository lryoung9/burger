<div class="container">
  
  {{!-- header div --}}
  <div class="well row">
    <h1>Eat-Da-Burger</h1>
  </div>

  {{!-- Burger Div --}}
  <div class="row">

    {{!-- Uneaten Burgers --}}
    <div class="well col col-xs-12 col-md-6 clearfix">
      <h2>Choices, choices, choices!</h2>

      <ul class="list-unstyled">
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger devoured=false}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    {{!-- Eaten Burgers --}}
    <div class="well col col-xs-12 col-md-6 clearfix">
      <h2>That was tasty!</h2>

      <ul class="list-unstyled">
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger devoured=true}}
          {{/if}}
        {{/each}}
      </ul>
    </div>

  </div>

  {{!-- Add A Burger --}}
  <div class="well row">
    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>

      <button type="submit">Add Burger</button>
    </form>
  </div>

</div>